<UserControl x:Class="FestivalProject.View.LOverzicht"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:vm="clr-namespace:FestivalProject.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    
    <UserControl.DataContext>
        <vm:LOverzichtVM/>
    </UserControl.DataContext>
    
    <Grid Style="{StaticResource ContentRoot}">

        <mui:ModernTab Links="{Binding Links}" SelectedSource="{Binding SelectedSource}" Layout="Tab" >

        </mui:ModernTab>
        <ItemsControl ItemsSource="{Binding DagOverzichten}">
            <DataTemplate>
                
            </DataTemplate>
        </ItemsControl>
    </Grid>
    

</UserControl>
